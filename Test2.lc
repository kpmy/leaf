MODULE TestStd
VAR
	i INTEGER
	s STRING
BEGIN
	i:=-1
	WHILE i<10 DO
		INC(x:: i)
	ELSIF i<31 DO
		INC(x:: i, n: 2)
	ELSIF i=32 DO
		DEC(x::i)
	END
	s:="a"
	s[0] :=  \CAP s[0]
END TestStd.

MODULE TestStd2
	CONST s = "Hello, World!"
	VAR i INTEGER
	VAR x STRING
	VAR b BOOLEAN
BEGIN
	i:=0
	WHILE i < \LEN s DO
		x := x + \CAP s[i]
		INC(x::i)
	END
	b:=\ODD i
END TestStd2.

MODULE TestAny
	VAR
		a, z ANY
		x INTEGER
		t TRILEAN
		b BOOLEAN
BEGIN
	a:=UNDEF
	t := a IS INTEGER
	z:=a
	x:=0
	a:=z
	a:=x
	z:=x
	b := (a = z)
	b := (a # z)
	b := (a # UNDEF)
	b := (a = UNDEF)
	t := a IS INTEGER
	t := a IS BOOLEAN
	CHOOSE a
		AS REAL: a := a + 0.5
		OR INTEGER: a := a + 55
		OR UNDEF: a := t
	END;
	z := 0.4
	CHOOSE z
		AS REAL: z := z + 0.5
		OR INTEGER: z := z + 55
		OR UNDEF: z := t
	END;
	a := UNDEF
	CHOOSE a
		AS REAL: a := a + 0.5
		OR INTEGER: a := a + 55
		OR UNDEF: a := t
	END;
END TestAny.
