MODULE TestAtom
	CONST A; B; C
	VAR a, b, c ATOM
	VAR ok BOOLEAN
BEGIN
	a := A
	b := B
	ok := (a = b) & (a # b) & (a # C)
	ok := c = NIL
	ok := NIL = c
	ok := NIL # c
	ok := c # NIL
	a := b
	ok := (a = b)
END TestAtom.

MODULE TestReal
	CONST
		Pi = 3.14
		E = 2.71
	VAR
		r, s, t REAL
		i, j INTEGER
		ok BOOLEAN
BEGIN
	r := 0.1
	r := Pi
	r := -r
	s := E
	t := Pi / (E + 1.0)
	i := 45
	j := 443
	s := i/j
	t:=i/s
	s:=j/t
	s := s*s + t*t - s + t^i - s^j + s*i + s + i + s / i + s - i
	s := s / i + s * i
	ok := (s > t) | (s >= t) & (s < t) | (s <= t)
	ok := (s = t) & (s # t)
END TestReal.

